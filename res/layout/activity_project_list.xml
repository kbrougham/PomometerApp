<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/project_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProjectListActivity" >

        <TextView
            android:id="@+id/project_list_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/project_list_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white_text"
            android:textSize="@dimen/page_title_text_size"
            android:textStyle="bold" />

        <View
            android:id="@+id/project_list_title_separator"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@id/project_list_title"
            android:background="@color/white_text" />

        <ScrollView
            android:id="@+id/project_list_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/project_list_options_frame"
            android:layout_alignTop="@+id/project_list_title_separator"
            android:background="@color/red_background"
            android:fadeScrollbars="false" >

            <TableLayout
                android:id="@+id/project_list_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </TableLayout>

        </ScrollView>
        
        <FrameLayout
            android:id="@+id/project_list_options_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false"
            android:background="@color/red_foreground" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_list_button_new" />

        </FrameLayout>

</RelativeLayout>